{
  "functions": {
    "api/*.php": { "runtime": "vercel-php@0.7.4", "memory": 1024, "maxDuration": 60 }
  },
  "routes": [
    { "src": "/(.*)\\.(css|js|mjs|map|txt|json|png|jpg|jpeg|gif|svg|webp|ico|woff|woff2|ttf|eot)$", "dest": "/$1.$2" },
    { "src": "/(.+\\.php)$", "dest": "/api/relay.php?script=$1" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ]
}
